[user]
	name = sescobb27
	email = s.escob.b.27@gmail.com

[color]
	ui = true

[credential "https://github.com"]
	username = sescobb27
	helper = cache --timeout=43200

[merge]
	tool = meld
	# Include summaries of merged commits in newly created merge commit messages
	log = true
	stat = true

[push]
	default = current

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1

[credential]
	helper = store

[hub]
	protocol = https

[alias]
	a = add
	cam = commit --amend
	cbr = checkout -b
	cl = clone
	cm = commit -m
	di = diff
	dis = diff --stage
	list-branch = branch -r
	p = pull --rebase
	pm = push origin master
	po = push origin
	pr = push --recurse-submodules=check
	s = status
	undo = reset --soft HEAD^
	llog = log --date=local
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[core]
	editor = "subl -n -w"
	excludesfile = ~/.gitignore

[advice]
	pushNonFastForward = false

[apply]
	whitespace = nowarn
